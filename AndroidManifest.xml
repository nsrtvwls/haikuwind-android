<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.haikuwind"
      android:versionCode="1"
      android:versionName="1.0.0">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-sdk android:minSdkVersion="3"/>

    <application android:name=".Application"
            android:icon="@drawable/icon"
            android:label="@string/app_name" 
            android:debuggable="true">
        <activity android:name=".tabs.HallOfFame"
                  android:label="@string/app_name"/>
        <activity android:name=".tabs.Favorites"
                  android:label="@string/app_name"/>
        <activity android:name=".tabs.MyOwn"
                  android:label="@string/app_name"/>
        <activity android:name=".tabs.Timeline"
                  android:label="@string/app_name"/>
        <activity android:name=".tabs.TopChart"
                  android:label="@string/app_name"/>
        <activity android:name=".HaikuWind"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity android:name=".RegisterActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>